<LinearLayout 
    android:id="@+id/calender_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgray"
    android:orientation="vertical"
       android:layout_gravity="center"
   
    android:layout_below="@+id/start_end_layout" >
<!-- <Button
        android:id="@+id/selectedDayMonthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/calendar_top_header"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" >
    </Button> -->

 <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        
        android:gravity="left|top"
        android:height="30sp"
        android:orientation="horizontal" >

 <!--  android:background="@drawable/topbar" -->
             <LinearLayout   android:layout_width="30dp"
            android:layout_height="30dp"
              android:layout_gravity="center"
                android:id="@+id/prevMonth"
                android:gravity="center"
                 android:layout_marginLeft="10sp"
            >
        

      <ImageView
        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
         
            android:src="@drawable/calendar_left_arrow_selector" >
        </ImageView>
</LinearLayout>
            <TextView
            android:id="@+id/currentMonth"
            android:layout_width="fill_parent"
            android:layout_height="25sp"
            android:layout_weight="0.6"
            android:gravity="center"
          
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Green" >
        </TextView>

<LinearLayout   android:layout_width="30dp"
            android:layout_height="30dp"
              android:layout_gravity="center"
             android:id="@+id/nextMonth"
            android:gravity="center"
                
            >
       <ImageView
         
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
       
            android:src="@drawable/calendar_right_arrow_selector" >
        </ImageView>
</LinearLayout>
        
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/calendarheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/calendar_days_new" >
        </ImageView>
    </LinearLayout>

    <GridView
           android:layout_gravity="center"
        android:id="@+id/calendar"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:paddingLeft="20dp"
        android:numColumns="7" 
               android:listSelector="@color/Green"
        android:choiceMode="singleChoice">
    </GridView>

</LinearLayout>

<!--complete Time Layout  -->
<LinearLayout
    android:id="@+id/complete_time_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/calender_layout"
    android:orientation="horizontal" 
  >

<!-- Hour Layout Begin   -->
<LinearLayout 
       android:id="@+id/hour_layout"
      android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
              android:orientation="horizontal"
            
    >
<LinearLayout      

    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/time_layout"
            >
   <EditText
       android:gravity="center"
            android:id="@+id/event_hour_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 android:textSize="40sp"
 android:background="@null"
  android:inputType="numberDecimal"
 android:layout_gravity="center"
android:textColor="@color/Gray"
            android:text="00" 
             android:maxLength="2"
               android:ems="1"
                android:textCursorDrawable="@drawable/cursor"
            android:layout_marginBottom="5dp">
            
        </EditText>
        
   
</LinearLayout>
 <LinearLayout      

    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
      android:layout_marginLeft="2dp"
           android:layout_marginTop="5dp"
            >
            <ImageView
            android:id="@+id/event_hour_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
 
            android:src="@drawable/event_clock_toggle_up"
            android:layout_marginBottom="1dp" >
        </ImageView>
      
         <ImageView
            android:id="@+id/event_hour_down"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
       
            android:src="@drawable/event_clock_toggle_down" >
        </ImageView>
</LinearLayout>
</LinearLayout>

<!-- Hour Layout End  --> 
      <ImageView
            android:id="@+id/event_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginBottom="5dp"
       android:layout_gravity="center"
            android:src="@drawable/event_break" >
        </ImageView>
<!-- Minute Layout Begin   -->
<LinearLayout 
       android:id="@+id/minute_layout"
      android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     
              android:orientation="horizontal"
        
    >
<LinearLayout      

    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/minute_time_layout"
            >
   <EditText
       android:gravity="center"
            android:id="@+id/event_minute_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 android:textSize="40sp"
  android:layout_gravity="center"
 android:textColor="@color/Gray"
            android:text="00" 
             android:maxLength="2"
               android:ems="1"
                android:textCursorDrawable="@drawable/cursor"
            android:background="@null"
             android:inputType="numberDecimal"
            android:layout_marginBottom="5dp">
        </EditText>
        
   
</LinearLayout>
 <LinearLayout      

    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
      android:layout_marginLeft="2dp"
           android:layout_marginTop="5dp"
            >
            <ImageView
            android:id="@+id/event_minute_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
 
            android:src="@drawable/event_clock_toggle_up"
            android:layout_marginBottom="1dp" >
        </ImageView>
      
         <ImageView
            android:id="@+id/event_minute_down"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
       
            android:src="@drawable/event_clock_toggle_down" >
        </ImageView>
</LinearLayout>
</LinearLayout>
<!-- Minute Layout end -->

<!-- am pm Layout begin -->
<LinearLayout      

    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/am_time_layout"
            android:layout_marginBottom="12dp"
          android:layout_gravity="bottom"
           
            
            >
  <View 
        android:layout_width="20dp"
            android:layout_height="0dp"/> 
   <TextView
       android:gravity="center"
            android:id="@+id/event_am_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 android:textSize="20sp"
  android:textColor="@color/Gray"
 android:layout_gravity="bottom"
            android:text="am" >
        </TextView>
      <TextView
       android:gravity="center"
            android:id="@+id/slash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 android:textSize="20sp"
  android:textColor="@color/Gray"
 android:layout_gravity="bottom"
 android:paddingLeft="0dp"
 android:paddingRight="1dp"
            android:text="/" >
        </TextView>   
   
         <TextView
       android:gravity="center"
            android:id="@+id/event_pm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 android:textSize="20sp"
 android:layout_gravity="bottom"
  android:textColor="@color/Gray"
            android:text="pm" >
        </TextView>
   
</LinearLayout>
</LinearLayout> 


<LinearLayout
             android:id="@+id/reminder_text"
    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/complete_time_layout"
            android:layout_marginTop="5dp"
            android:weightSum="10"
              android:visibility="gone">
    
     <TextView
       android:gravity="center"
            android:id="@+id/auto_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
 android:layout_gravity="bottom"
 android:textColor="@color/Gray"
            android:text="{auto send}" 
          >
        </TextView>
        
     <TextView
       android:gravity="center"
            android:id="@+id/remind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
 android:layout_gravity="bottom"
  android:textColor="@color/Gray"
            android:text="{remind me}" >
        </TextView>
          
           
</LinearLayout> 

</LinearLayout>
</ScrollView>
<View
    android:layout_below="@+id/complete_calender_layout"
    
        android:layout_marginTop="5dp"
      
    android:layout_width="fill_parent"
    android:layout_height="0.5dp"

    android:background="@color/Green"
    /> 

</RelativeLayout>
